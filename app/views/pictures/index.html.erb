<%= page_header do %>
<%= link_to 'Add Picture' new_album_picture_path(current_user, @album),class: 'btn pull-right %' >
<h1><%= @album.title %></h1>
<% end %>
<ul class = "thumbnails">
  <% @pictures.each do |picture| %>
  <li>
    <div class = "thumbnail" >
      <%= link_to image_tag(picture.asset.url(:small)), album_pictures_path(@user, @album, picture) %> <br />
      <div class = "caption">
        <% if picture.caption? %><%= picture.caption %><br /><% end %>
        <%= link_to  'View full size' , album_picture_path(@user, @album,picture) %>
      </div>
    </div>
  </li>
  <% end %>
</ul>
